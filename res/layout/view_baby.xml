<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:theme="@android:style/Theme.NoTitleBar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fffae8">

    <RelativeLayout
        android:id="@+id/topBanner"
        style="@style/topBanner">

        <Button
                style="@style/leftHeadline"
                android:id="@+id/editBaby"
                android:text="Â« Edit Baby"
                android:layout_alignParentLeft="true"/>

        <TextView
            android:text=""
            style="@style/rightHeadline"
            android:id="@+id/babyName"
            android:layout_alignParentRight="true"/>
                
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBanner"
        android:layout_above="@+id/bottomBanner">

        <LinearLayout
            android:id="@+id/profileStats"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/babyPicture"
                style="@style/imageBox"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/babyPicture"
                android:paddingLeft="4dp"
                android:paddingTop="4dp">

                <LinearLayout style="@style/profileStatsRow" >

                    <TextView
                            android:text="Sex: "
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:text=""
                            android:id="@+id/babySex"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout style="@style/profileStatsRow" >

                    <TextView
                            android:text="Height: "
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:text=""
                            android:id="@+id/babyHeight"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    <TextView
                            android:text=""
                            android:id="@+id/heightMeas"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout style="@style/profileStatsRow" >

                    <TextView
                            android:text="Weight: "
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:text=""
                            android:id="@+id/babyWeight"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    <TextView
                            android:text=""
                            android:id="@+id/weightMeas"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout style="@style/profileStatsRow" >

                    <TextView
                            android:text="DOB: "
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:text=""
                            android:id="@+id/babyDob"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileStats"
            >

            <TextView
                style="@style/segmentBanner"
                android:text="Today's Feedings"
                android:id="@+id/test"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileStats">

                <TextView
                    style="@style/segmentText"
                    android:text="Feedings to Now:"
                    android:id="@+id/test"/>

                <TextView
                    style="@style/segmentText"
                    android:text="[Number Here]"
                    android:id="@+id/test"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileStats">

                <TextView
                    style="@style/segmentText"
                    android:text="Next Scheduled Feeding:"
                    android:id="@+id/test"/>

                <TextView
                    style="@style/segmentText"
                    android:text="[Time Here]"
                    android:id="@+id/test"/>

            </LinearLayout>

            <TextView
                style="@style/segmentBanner"
                android:text="Feeding History"
                android:id="@+id/test"/>

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/myTableLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <TableRow style="@style/feedingRow1">

                        <ImageView
                            android:src="@drawable/icon_bottle"
                            android:id="@+id/feedingIcon"
                            style="@style/imageBox"
                            android:layout_alignParentLeft="true"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/rowText"
                                android:text="4 oz"
                                android:id="@+id/feedAmount"/>

                            <TextView
                                style="@style/rowText"
                                android:text="Wake"
                                android:id="@+id/babyWake"/>

                            <TextView
                                style="@style/rowText"
                                android:text="Dry"
                                android:id="@+id/babyPoop"/>

                        </LinearLayout>

                    </TableRow>

                    <TableRow style="@style/feedingRow2">

                        <ImageView
                            android:src="@drawable/icon_breastfeed"
                            android:id="@+id/feedingIcon"
                            style="@style/imageBox"
                            android:layout_alignParentLeft="true"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/rowText"
                                android:text="Left"
                                android:id="@+id/feedType"/>

                            <TextView
                                style="@style/rowText"
                                android:text="10 min"
                                android:id="@+id/feedAmount"/>

                            <TextView
                                style="@style/rowText"
                                android:text="Wake"
                                android:id="@+id/babyWake"/>

                            <TextView
                                style="@style/rowText"
                                android:text="Dry"
                                android:id="@+id/babyPoop"/>

                        </LinearLayout>

                    </TableRow>

                    <TableRow style="@style/feedingRow1">

                        <ImageView
                            android:src="@drawable/icon_bottle"
                            android:id="@+id/feedingIcon"
                            style="@style/imageBox"
                            android:layout_alignParentLeft="true"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/rowText"
                                android:text="Bottle"
                                android:id="@+id/feedType"/>

                            <TextView
                                style="@style/rowText"
                                android:text="4 oz"
                                android:id="@+id/feedAmount"/>

                            <TextView
                                style="@style/rowText"
                                android:text="Wake"
                                android:id="@+id/babyWake"/>

                            <TextView
                                style="@style/rowText"
                                android:text="Dry"
                                android:id="@+id/babyPoop"/>

                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomBanner"
        style="@style/bottomBanner">

        <Button android:text="Family"
                android:id="@+id/familyButton"
                android:drawableTop="@drawable/icon_family"
                android:layout_alignParentLeft="true"
                style="@style/iconNavButton"
                />

        <Button android:text="Journal"
                android:id="@+id/journalButton"
                android:drawableTop="@drawable/icon_pencil"
                android:layout_toRightOf="@+id/familyButton"
                style="@style/iconNavButton"
                />

        <Button android:text="Bottle"
                android:id="@+id/bottleButton"
                android:drawableTop="@drawable/icon_bottle"
                android:layout_toLeftOf="@+id/breastfeedButton"
                style="@style/iconNavButton"
                />

        <Button android:text="Breast"
                android:id="@+id/breastfeedButton"
                android:drawableTop="@drawable/icon_breastfeed"
                android:layout_alignParentRight="true"
                style="@style/iconNavButton"
                />

    </RelativeLayout>

</RelativeLayout>
